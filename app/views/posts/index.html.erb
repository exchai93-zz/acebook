<h1>Posts</h1>
<table>
  <tr>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post), class:'btn btn-success btn-xs' %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class:'btn btn-info btn-xs'%></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' %></td>
    </tr>
    <% end %>
</table>

<%= link_to posts_path, class: 'btn btn-success btn-xs' do %>
  <i class='glyphicon glyphicon-home'></i> Back Home
<% end %>
<%= link_to 'New post', new_post_path, class:'btn btn-default btn-xs' %>
